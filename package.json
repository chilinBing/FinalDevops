{
  "name": "inventory-management-system",
  "version": "1.0.0",
  "description": "Cloud-deployed inventory management system with CRUD operations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:enhanced": "node server-enhanced.js",
    "dev": "nodemon server.js",
    "dev:enhanced": "nodemon server-enhanced.js",
    "test": "jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "docker:up": "docker compose up --build -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "server-enhanced.js",
      "models/**/*.js",
      "middleware/**/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  },
  "keywords": [
    "inventory",
    "management",
    "cloud",
    "docker",
    "kubernetes"
  ],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}
